---
layout: base.njk
---

<!-- Hero Carousel -->
<div id="heroCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="8000">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1"></button>
    </div>
    
    <div class="carousel-inner">
        <div class="carousel-item active">
            <div class="container">
                <img src="{{ '/images/carousel/st_esprit_int1.jpg' | url }}" class="d-block w-100" alt="Church Interior">
            </div>
        </div>
        <div class="carousel-item">
            <div class="container">
                <img src="{{ '/images/carousel/st_esprit.jpg' | url }}" class="d-block w-100" alt="Church Exterior">
            </div>
        </div>
    </div>
    
    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<!-- Main Content -->
<div class="container my-3">
    <!-- Welcome Section -->
    <div class="row mb-3">
        <div class="col-lg-10 mx-auto">
            <div class="text-center mb-2">
                <h1>{{ indexTitle }}</h1>
            </div>
        </div>
    </div>

    <!-- Schedule Section -->
    <div class="row mb-3">
        <div class="col-lg-10 mx-auto">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h2 class="card-title">{{ translations[lang].home.scheduleTitle }}</h2>
                    <div class="schedule-content">
                        {{ scheduleContent | safe }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Donation Section -->
    <div class="row mb-3">
        <div class="col-lg-10 mx-auto">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <h3 class="card-title text-warning">{{ translations[lang].home.donationTitle }}</h3>
                    <div class="donation-content">
                        {{ donationContent | safe }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="row">
        <div class="col-lg-10 mx-auto">
            {{ content | safe }}
        </div>
    </div>
</div> 